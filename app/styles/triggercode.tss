	layout: "composite",
	shadowColor: "rgba(0, 0, 0, 0.3)",
	shadowOffset: { x: 0, y: 2 },
	shadowRadius: 4
}

".codeOptionSelected": {
	borderColor: "#46D365",
	borderWidth: 3,
	backgroundColor: "rgba(56, 116, 130, 0.4)"
