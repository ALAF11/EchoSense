// ========== WINDOW & BACKGROUND ==========
".recaptureWindow": {
	backgroundColor: "#0A2E3D",
	orientationModes: [Ti.UI.LANDSCAPE_LEFT, Ti.UI.LANDSCAPE_RIGHT],
	layout: "composite"
}

".background": {
	width: 900,
	height: 950,
	backgroundImage: "img/background_echosense.png",
	center: { x: "50%", y: "50%" },
	opacity: 0.7,
	zIndex: 0
}

// ========== HEADER ==========
".header": {
	width: Ti.UI.SIZE,
	height: Ti.UI.SIZE,
	layout: "horizontal",
	top: 15,
	zIndex: 2,
	left: 40,
	shadowColor: "rgba(0, 0, 0, 0.4)",
	shadowOffset: { x: 0, y: 3 },
	shadowRadius: 5
}

"#logoSmall": {
	width: 35,
	height: 43  
}

".headerTitleRow": {
	width: Ti.UI.SIZE,
	height: Ti.UI.SIZE,
	layout: "horizontal",
	left: 10,
	top: 10
}

".headerTitleEcho": {
	text: "Echo",
	font: {
		fontSize: 20,
		fontFamily: "Poppins-SemiBold"
	},
	color: "#2495A1",
	width: Ti.UI.SIZE,
	height: Ti.UI.SIZE,
	shadowColor: "rgba(0, 0, 0, 0.5)",
	shadowOffset: { x: 0, y: 2 },
	shadowRadius: 4
}

".headerTitleSense": {
	text: "Sense",
	font: {
		fontSize: 20,
		fontFamily: "Poppins-SemiBold"
	},
	color: "#FFFFFF",
	width: Ti.UI.SIZE,
	height: Ti.UI.SIZE,
	left: 0,
	shadowColor: "rgba(0, 0, 0, 0.5)",
	shadowOffset: { x: 0, y: 2 },
	shadowRadius: 4
}

// ========== NAVIGATION BAR ==========
".navBar": {
	width: 600,
	height: 35,
	layout: "horizontal",
	borderRadius: 18,
	borderWidth: 2,
	borderColor: "#387482",
	backgroundColor: "rgba(0, 23, 32, 0.3)",
	top: 22,
	right: 40,
	zIndex: 2,
	shadowColor: "rgba(0, 0, 0, 0.4)",
	shadowOffset: { x: 0, y: 2 },
	shadowRadius: 5
}

".navItem": {
	font: {
		fontSize: 14,
		fontFamily: "Poppins-Medium"
	},
	color: "#FFFFFF",
	textAlign: "center",
	width: 100,
	height: Ti.UI.FILL,
	touchEnabled: true,
	verticalAlign: Ti.UI.TEXT_VERTICAL_ALIGNMENT_CENTER
}

".navItemActive": {
	color: "#FBA71E",
	font: {
		fontSize: 14,
		fontFamily: "Poppins-SemiBold"
	}
}

// ========== MAIN CONTENT ==========
".mainContent": {
	width: Ti.UI.SIZE,
	height: Ti.UI.SIZE,
	layout: "horizontal",
	top: 75,
	zIndex: 1,
	center: { x: "50%" }
}

// ========== CARD ==========
".card": {
	width: 360,
	height: 270,
	borderRadius: 20,
	borderWidth: 2,
	borderColor: "#387482",
	backgroundColor: "rgba(0, 23, 32, 0.3)",
	layout: "composite",
	shadowColor: "rgba(0, 0, 0, 0.5)",
	shadowOffset: { x: 0, y: 4 },
	shadowRadius: 8
}

"#resurfacingCard": {
	left: 0
}

"#mapCard": {
	left: 25
}

// ========== CARD TITLE ==========
".cardTitle": {
	top: 15,
	font: {
		fontSize: 26,
		fontFamily: "Poppins-SemiBold"
	},
	color: "#FBA71E",
	textAlign: "center",
	width: Ti.UI.FILL,
	height: Ti.UI.SIZE,
	shadowColor: "rgba(0, 0, 0, 0.5)",
	shadowOffset: { x: 0, y: 2 },
	shadowRadius: 4
}

// ========== RESURFACING CARD - COMPONENTS ==========
".infoSection": {
	width: Ti.UI.FILL,
	height: Ti.UI.SIZE,
	layout: "vertical",
	left: 20,
	right: 20
}

"#timeSinceSection": {
	top: 50
}

"#distanceSection": {
	top: 115
}

"#driftSection": {
	top: 165
}

".infoLabel": {
	font: {
		fontSize: 16,
		fontFamily: "Poppins-Regular"
	},
	color: "#FFFFFF",
	textAlign: "center",
	width: Ti.UI.FILL,
	height: Ti.UI.SIZE
}

".timeValue": {
	font: {
		fontSize: 28,
		fontFamily: "Poppins-SemiBold"
	},
	color: "#2495A1",
	textAlign: "center",
	width: Ti.UI.FILL,
	height: Ti.UI.SIZE,
	top: 2
}

".dataValue": {
	font: {
		fontSize: 20,
		fontFamily: "Poppins-SemiBold"
	},
	color: "#2495A1",
	textAlign: "center",
	width: Ti.UI.FILL,
	height: Ti.UI.SIZE,
	top: 2
}

// Status Icons Container
".statusIconsContainer": {
	width: Ti.UI.SIZE,
	height: Ti.UI.SIZE,
	layout: "horizontal",
	bottom: 15,
	center: { x: "50%" }
}

".statusGroup": {
	width: 175,
	height: Ti.UI.SIZE,
	layout: "vertical"
}

".statusLabel": {
	font: {
		fontSize: 16,
		fontFamily: "Poppins-Regular"
	},
	color: "#FFFFFF",
	textAlign: "center",
	width: Ti.UI.FILL,
	height: Ti.UI.SIZE
}

".statusIcon": {
	width: 35,
	height: 35,
	top: 5,
	center: { x: "50%" }
}

// ========== MAP CARD ==========
".mapContainer": {
	width: 340,
	height: 235,
	top: 45,
	center: { x: "50%" },
	backgroundColor: "rgba(15, 50, 65, 0.5)",
	borderRadius: 15,
	borderColor: "#2495A1",
	borderWidth: 2
}

".mapPlaceholder": {
	width: Ti.UI.FILL,
	height: Ti.UI.FILL,
	borderRadius: 15
}

".mapOverlay": {
	width: Ti.UI.SIZE,
	height: Ti.UI.SIZE,
	layout: "vertical",
	top: 15,
	right: 15,
	backgroundColor: "rgba(36, 149, 161, 0.95)",
	borderRadius: 10,
	borderColor: "#2495A1",
	borderWidth: 2,
	zIndex: 10
}

".mapOverlayUncertainty": {
	width: Ti.UI.SIZE,
	height: Ti.UI.SIZE,
	layout: "vertical",
	center: { x: "50%", y: "50%" },
	backgroundColor: "rgba(36, 149, 161, 0.95)",
	borderRadius: 10,
	borderColor: "#2495A1",
	borderWidth: 2,
	zIndex: 10
}

".mapLabel": {
	font: {
		fontSize: 12,
		fontFamily: "Poppins-SemiBold"
	},
	color: "#FFFFFF",
	textAlign: "center",
	width: Ti.UI.SIZE,
	height: Ti.UI.SIZE,
	top: 8,
	left: 12,
	right: 12
}

".mapIconBoat": {
	width: 30,
	height: 30,
	top: 5,
	bottom: 8,
	center: { x: "50%" }
}

".mapIconDevice": {
	width: 30,
	height: 30,
	top: 5,
	bottom: 8,
	center: { x: "50%" }
}

// Buoy Location Info (bottom of map)
".buoyLocationInfo": {
	width: Ti.UI.SIZE,
	height: Ti.UI.SIZE,
	layout: "horizontal",
	bottom: 15,
	center: { x: "50%" },
	backgroundColor: "rgba(36, 149, 161, 0.95)",
	borderRadius: 10,
	borderColor: "#2495A1",
	borderWidth: 2,
	zIndex: 10
}

".buoyLocationIcon": {
	width: 25,
	height: 25,
	left: 10,
	top: 6
}

".buoyLocationText": {
	font: {
		fontSize: 12,
		fontFamily: "Poppins-SemiBold"
	},
	color: "#FFFFFF",
	textAlign: "center",
	width: Ti.UI.SIZE,
	height: Ti.UI.SIZE,
	top: 6,
	left: 8
}

".coordinatesText": {
	font: {
		fontSize: 10,
		fontFamily: "Poppins-Regular"
	},
	color: "#FFFFFF",
	textAlign: "center",
	width: Ti.UI.SIZE,
	height: Ti.UI.SIZE,
	top: 8,
	left: 5,
	right: 10
}

// ========== BOTTOM ACTION BUTTONS ==========
".bottomActionContainer": {
	bottom: 20,
	width: Ti.UI.SIZE,
	height: 50,
	layout: "horizontal",
	center: { x: "50%" },
	zIndex: 2
}

".actionButton": {
	font: {
		fontSize: 18,
		fontFamily: "Poppins-SemiBold"
	},
	textAlign: "center",
	borderRadius: 25,
	height: 50,
	borderWidth: 0,
	shadowColor: "rgba(0, 0, 0, 0.4)",
	shadowOffset: { x: 0, y: 2 },
	shadowRadius: 5
}

".recoveredButton": {
	width: 220,
	backgroundColor: "#46D365",
	color: "#FFFFFF",
	left: 0
}

".backButton": {
	width: 180,
	backgroundColor: "#FFFFFF",
	color: "#2495A1",
	left: 15
}

".lostButton": {
	width: 220,
	backgroundColor: "#E74C3C",
	color: "#FFFFFF",
	left: 15
}
