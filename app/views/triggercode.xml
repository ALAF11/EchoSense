<Alloy>
	<Window id="triggerCodeWindow" class="triggerCodeWindow">
		
		<!-- Background Image -->
		<ImageView class="background" />
		
		<!-- Header -->
		<View class="header">
			<ImageView id="logoSmall" image="img/logo.png" />
			<View class="headerTitleRow">
				<Label class="headerTitleEcho" />
				<Label class="headerTitleSense" />
			</View>
		</View>
		
		<!-- Navigation Bar -->
		<View class="navBar">
			<Label class="navItem" text="Status" onClick="navigateToStatus" />
			<Label class="navItem" text="Frequency" onClick="navigateToFrequency" />
			<Label class="navItem navItemActive" text="Trigger Code" />
			<Label class="navItem" text="Mission" onClick="navigateToMission" />
			<Label class="navItem" text="Recapture" onClick="navigateToRecapture" />
			<Label class="navItem" text="End" onClick="navigateToEnd" />
		</View>
		
		<!-- Main Content -->
		<View class="mainContent">
			
			<!-- Left Card: Trigger Code Selection -->
			<View id="triggerCodeSelectionCard" class="cardSelection">
				<Label class="cardTitle" text="TRIGGER CODE SELECTION" />
				<Label class="instruction" text="Select a predefined acoustic trigger code:" />
				
				<!-- Code Options -->
				<View class="codeOptionsContainer">
					<!-- Code A -->
					<View id="codeAContainer" class="codeOption" onClick="selectCode">
						<Label class="codeLabel" text="CODE A: -.-." />
					</View>
					
					<!-- Code B -->
					<View id="codeBContainer" class="codeOption" onClick="selectCode">
						<Label class="codeLabel" text="CODE B: -...-" />
					</View>
					
					<!-- Code C -->
					<View id="codeCContainer" class="codeOption" onClick="selectCode">
						<Label class="codeLabel" text="CODE C: ----." />
					</View>
				</View>
				
				<!-- Status Indicators (abaixo dos botÃµes) -->
				<View class="statusContainer">
					<View class="buoyStatusContainer">
						<Label class="statusLabel" text="Buoy status:" />
						<ImageView id="buoyStatusIcon" class="statusIcon" image="img/icon_signal.png" />
					</View>
					<View class="deviceStatusContainer">
						<Label class="statusLabel" text="Device status:" />
						<ImageView id="deviceStatusIcon" class="statusIcon" image="img/icon_idle.png" />
					</View>
				</View>
			</View>
			
			<!-- Right Card: Trigger Code Test -->
			<View id="triggerCodeTestCard" class="cardTest">
				<Label class="cardTitle" text="TRIGGER CODE TEST" />
				<Label class="testInstruction" text="Verify the selected trigger code:" />
				
				<!-- Test Button -->
				<Button id="testButton" class="testButton" title="TEST" onClick="testTriggerCode" />
				
				<!-- Test Status Messages -->
				<Label id="clickToStartLabel" class="clickToStart" text="Click to verify code" />
				<Label id="testingLabel" class="testStatus" text="Testing..." />
				
				<!-- Waveform Image -->
				<ImageView id="waveformImage" class="waveformImage" image="img/codeA.png" />
				
				<!-- Code Detected Message -->
				<Label id="codeDetectedLabel" class="codeDetected" text="CODE DETECTED!" />
			</View>
			
		</View>
		
		<!-- Bottom Navigation (por baixo dos cards) -->
		<View class="bottomNavContainer">
			<Button id="backButton" class="navButton" onClick="goBack" />
			<Button id="nextButton" class="navButton" onClick="goNext" />
		</View>
		
	</Window>
</Alloy>